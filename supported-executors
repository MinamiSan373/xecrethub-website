  <script>
    const hamburger = document.getElementById('hamburger');
    const menuDropdown = document.getElementById('menuDropdown');
    const executorListPC = document.getElementById('executorListPC');
    const executrCountText = document.getElementById('executrCountText');

    hamburger.addEventListener('click', () => {
      hamburger.classList.toggle('active');
      menuDropdown.classList.toggle('show');
    });

    document.addEventListener('click', (e) => {
      if (!hamburger.contains(e.target) && !menuDropdown.contains(e.target)) {
        hamburger.classList.remove('active');
        menuDropdown.classList.remove('show');
      }
    });

   function updateGameCount() {
  const pcCount = document.getElementById('executorListPC').children.length;
  const totalCount = pcCount;
  executrCountText.textContent = `Currently supporting ${totalCount} executors`;
}


    updateGameCount();
      const searchInput = document.getElementById('searchInput');
  const clearSearch = document.getElementById('clearSearch');
  const executorItems = document.querySelectorAll('.executor-item');

  function performSearch() {
    const terms = searchInput.value.toLowerCase().split(" ").filter(Boolean);
    let visibleCount = 0;

    executorItems.forEach(item => {
      const name = item.textContent.toLowerCase();
      const matches = terms.every(term => name.includes(term));
      item.style.display = matches ? 'flex' : 'none';
      if (matches) visibleCount++;
    });

    executrCountText.textContent = visibleCount > 0
      ? `Showing ${visibleCount} executors`
      : `No executors found`;
  }

  searchInput.addEventListener('input', performSearch);
  clearSearch.addEventListener('click', () => {
    searchInput.value = '';
    performSearch();
  });
  const bars = document.querySelectorAll('.progress-bar');
bars.forEach(bar => {
  const percent = parseInt(bar.dataset.percent);
  bar.style.width = percent + '%';

  if (percent < 40) {
    bar.style.backgroundColor = 'red';
  } else if (percent < 80) {
    bar.style.backgroundColor = 'yellow';
  } else {
    bar.style.backgroundColor = 'limegreen';
  }
});

const container = document.getElementById('executorListPC');
const itemsArray = Array.from(container.children);

itemsArray.sort((a, b) => {
  const aBar = a.querySelector('.progress-bar');
  const bBar = b.querySelector('.progress-bar');

  const aPercent = aBar ? parseInt(aBar.dataset.percent) || 0 : 0;
  const bPercent = bBar ? parseInt(bBar.dataset.percent) || 0 : 0;

  return bPercent - aPercent;
});


itemsArray.forEach(item => container.appendChild(item));

  </script>
  
